# –æ—Ç—Å–ª–µ–∂–∏–≤–∞–Ω–∏–µ –ø—Ä–æ—Ü–µ—Å—Å–∞ openvpn
# —Å–ª—É–∂–∏—Ç –∫–∞–∫ –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä —Ä–∞–±–æ—Ç—ã openvpn –∫–ª–∏–µ–Ω—Ç–∞
# –ø—Ä–∏ –∑–∞–ø—É—Å–∫–µ openvpn –Ω–µ–æ–±—Ö–æ–¥–∏–º–æ
# —É–∫–∞–∑—ã–≤–∞—Ç—å –ø–∞—Ä–∞–º–µ—Ç—Ä --writepid ~/openvpn/openvpn.pid
run_watch openvpn {
    pidfile = "~/openvpn/openvpn.pid"
    format = "üõ°Ô∏èopenvpn"
    # –µ—Å–ª–∏ –ø–∞—Ä–µ–º–µ—Ç—Ä format_down –æ—Å—Ç–∞–≤–∏—Ç—å –ø—É—Å—Ç—ã–º,
    # —Ç–æ –ø—Ä–∏ –Ω–µ–∞–∫—Ç–∏–≤–Ω–æ–º –ø—Ä–æ—Ü–µ—Å—Å–µ –±–ª–æ–∫ –±—É–¥–µ—Ç –æ—Ç—Å—É—Ç—Å—Ç–≤–æ–≤–∞—Ç—å
    format_down=""
}

# –∞–Ω–∞–ª–æ–≥–∏—á–Ω—ã–π –±–ª–æ–∫ –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä openconnect vpn –∫–ª–∏–µ–Ω—Ç–∞
# —Ç—Ä–µ–±—É–µ—Ç—Å—è –∑–∞–ø—É—Å–∫ –∫–ª–∏–µ–Ω—Ç–∞ —Å –ø–∞—Ä–∞–º–µ—Ç—Ä–æ–º --pid-file=/var/run/openconnect.pid
run_watch openconnect {
    pidfile = "/var/run/openconnect.pid"
    format = "ÔÅÆ openconnect vpn"
    format_down=""
}

# —É–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –≥—Ä–æ–º–∫–æ—Å—Ç—å—é –∑–≤—É–∫–∞
volume master {
    format = "%volume üï™" # —à–∞–±–ª–æ–Ω –≥—Ä–æ–º–∫–æ—Å—Ç–∏ –≤ –∞–∫—Ç–∏–≤–Ω–æ–º —Å–æ—Å—Ç–æ—è–Ω–∏–∏
    format_muted = "üîá %volume" # —à–∞–±–ª–æ–Ω –≥—Ä–æ–º–∫–æ—Å—Ç–∏ –≤ —Å–æ—Å—Ç–æ—è–Ω–∏–∏ muted (–±–µ–∑ –∑–≤—É–∫–∞)
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

# –∏–Ω–¥–∏–∫–∞—Ç–æ—Ä WIFI
wireless _first_ {
    # —à–∞–±–ª–æ–Ω –≤—ã–≤–æ–¥–∞, –º–æ–∂–Ω–æ –¥–æ–ø–æ–ª–Ω–∏—Ç—å
    # –Ω–∞–∏–º–µ–Ω–æ–≤–∞–Ω–∏–µ–º –ø–æ–¥–∫–ª—é—á–µ–Ω–∏—è %essid
    # –∏ ip –∞–¥—Ä–µ—Å–æ–º %ip
    format_up = "Ôá´%quality|%frequency|%ip"
    format_down = "W: down"
}

# —Å–æ—Å—Ç–æ—è–Ω–∏–µ –∑–∞—Ä—è–¥–∞ –±–∞—Ç–∞—Ä–µ–∏
battery all {
    # —à–∞–±–ª–æ–Ω –≤—ã–≤–æ–¥–∞, –º–æ–∂–Ω–æ –¥–æ–ø–æ–ª–Ω–∏—Ç—å
    # –æ—Å—Ç–∞–≤—à–∏–º—Å—è –≤—Ä–µ–º–µ–Ω–µ–º —Ä–∞–±–æ—Ç—ã %emptytime
    # —ç–Ω–µ—Ä–≥–æ–ø–æ—Ç—Ä–µ–±–ª–µ–Ω–∏–µ–º %consumption –≤ –≤–∞—Ç—Ç–∞—Ö
    format = "%status %percentage"

    # true - –ø–æ–∫–∞–∑ –ø—Ä–æ—Ü–µ–Ω—Ç–∞ –∑–∞—Ä—è–¥–∞ –æ—Ç 0 –¥–æ 100
    # false - –ø–æ–∫–∞–∑ –ø—Ä–æ—Ü–µ–Ω—Ç–∞ –∑–∞—Ä—è–¥–∞ –æ—Ç 0 –¥–æ n, —Å —É—á–µ—Ç–æ–º
    # –∏–∑–Ω–æ—à–µ–Ω–Ω–æ—Å—Ç–∏ –∞–∫–∫—É–º—É–ª—è—Ç–æ—Ä–∞
    last_full_capacity = true
    format_down = "No battery"
    status_chr = "‚ö°" # —Å—Ç–∞—Ç—É—Å –ø–æ–¥–∑–∞—Ä—è–¥–∫–∏
    status_bat = "ÔâÅ" # —Å—Ç–∞—Ç—É—Å –≤ —Ä–µ–∂–∏–º–µ —Ä–∞–±–æ—Ç—ã –æ—Ç –±–∞—Ç–∞—Ä–µ–∏
    status_unk = "? UNK" # –Ω–µ–∏–∑–≤–µ—Å—Ç–Ω—ã–π —Å—Ç–∞—Ç—É—Å
    status_full = "ÔâÄ" # —Å—Ç–∞—Ç—É—Å –ø–æ–ª–Ω–æ–≥–æ –∑–∞—Ä—è–¥–∞
    path = "/sys/class/power_supply/BAT%d/uevent"

    # –Ω–∏–∂–Ω–∏–π –ø–æ—Ä–æ–≥ –∑–∞—Ä—è–¥–∞, –ø–æ—Å–ª–µ –∫–æ—Ç–æ—Ä–æ–≥–æ –±–ª–æ–∫
    # –±—É–¥–µ—Ç –æ–∫—Ä–∞—à–µ–Ω –≤ "color_bad" (–ø–æ —É–º–æ–ª—á–∞–Ω–∏—é –∫—Ä–∞—Å–Ω—ã–π)
    # –ø–æ–¥—Ä–æ–±–Ω–µ–µ –≤ man i3status
    low_threshold = 30
}

# –æ—Ç—Å–ª–µ–∂–∏–≤–∞–µ–º—ã–π –Ω–∞–∫–æ–ø–∏—Ç–µ–ª—å
disk "/" {
    # –¥–æ—Å—Ç—É–ø–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ:
    # %used, %percentage_used - –∑–∞–Ω—è—Ç–æ–µ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–æ
    # %free, %percentage_free - —Å–≤–æ–±–æ–¥–Ω–æ–µ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–æ
    # %avail, %percentage_avail - –¥–æ—Å—Ç—É–ø–Ω–æ–µ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–æ
    # %total - –≤—Å–µ–≥–æ
    format = "ÔÇ† %avail/%total"

    # –±—É–¥–µ—Ç –æ–∫—Ä–∞—à–µ–Ω –≤ "color_bad" (–ø–æ —É–º–æ–ª—á–∞–Ω–∏—é –∫—Ä–∞—Å–Ω—ã–π)
    # –ø—Ä–∏ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–∏ –Ω–∏–∂–Ω–µ–≥–æ –ø–æ—Ä–æ–≥–∞ –º–µ–Ω–µ–µ 10GB –¥–æ—Å—Ç—É–ø–Ω–æ–≥–æ –ø—Ä–æ—Å—Ç—Ä–∞–Ω—Å—Ç–≤–∞
    low_threshold = "15"
    threshold_type = "gbytes_avail"
    format_below_threshold = "ÔÇ† Warning: %avail/%total"
}

# –º–∏–Ω–∏—Ç–æ—Ä–∏–Ω–≥ –æ–ø–µ—Ä–∞—Ç–∏–≤–Ω–æ–π –ø–∞–º—è—Ç–∏
memory {
    # –¥–æ—Å—Ç—É–ø–Ω—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ:
    # %total, percentage_total
    # %used, percentage_used
    # %free, percentage_free
    # %available, percentage_available
    # %shared, percentage_shared
    format = "RAM %available/%total"

    # –ø–æ—Ä–æ–≥, –ø—Ä–∏ –∫–æ—Ç–æ—Ä–æ–º –≤—ã–≤–æ–¥ –æ–∫—Ä–∞—Å–∏—Ç—Å—è –≤
    # –∂–µ–ª—Ç—ã–π (degraded) –∏–ª–∏ –∫—Ä–∞—Å–Ω—ã–π (critical)
    # –∞ —Ñ–æ—Ä–º–∞—Ç –≤—ã–≤–æ–¥–∞ –∏–∑–º–µ–Ω–∏—Ç—Å—è –Ω–∞ format_degraded
    threshold_degraded = "2G"
    threshold_critical = "1G"
    format_degraded = "RAM %available/%total"
}

# —Ç–µ–º–ø–µ—Ä–∞—Ç—É—Ä–∞ –ø—Ä–æ—Ü–µ—Å—Å–æ—Ä–∞
cpu_temperature 0 {
    format = "%degrees C¬∞"

    # –≤–µ—Ä—Ö–Ω–∏–π –ø–æ—Ä–æ–≥ —Ç–µ–º–ø–µ—Ä–∞—Ç—É—Ä—ã, –ø—Ä–∏ –¥–æ—Å—Ç–∏–∂–µ–Ω–∏–∏ –∫–æ—Ç–æ—Ä–æ–≥–æ
    # –≤—ã–≤–æ–¥ –æ–∫—Ä–∞—Å–∏—Ç—Å—è –∫—Ä–∞—Å–Ω—ã–º,
    # –∏ —Ñ–æ—Ä–º–∞—Ç –∏–∑–º–µ–Ω–∏—Ç—Å—è –Ω–∞ format_above_threshold
    max_threshold = "60"
    format_above_threshold = "ü•µ %degrees"
    path = "/sys/class/thermal/thermal_zone0/temp"
}

# –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ —Ü–µ–Ω—Ç—Ä–∞–ª—å–Ω–æ–≥–æ –ø—Ä–æ—Ü–µ—Å—Å–æ—Ä–∞
cpu_usage {
    # %usage - –ø—Ä–æ—Ü–µ–Ω—Ç–Ω–æ–µ –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ –¶–ü
    # %cpu<N> - –Ω–∞—á–∏–Ω–∞—è —Å %cpu0 –∏ –¥–∞–ª–µ–µ –ø–æ–∫–∞–∑—ã–≤–∞–µ—Ç –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ —è–¥–µ—Ä
    format = "üß† %usage"

    # –¥–æ—Å—Ç—É–ø–Ω—ã –ø–∞—Ä–∞–º–µ—Ç—Ä—ã:
    # degraded_threshold, –æ–∫—Ä–∞—Å –≤ –∂–µ–ª—Ç—ã–π, –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é 90
    # max_threshold, –æ–∫—Ä–∞—Å –≤ –∫—Ä–∞—Å–Ω—ã–π, –ø–æ —É–º–æ–ª—á–∞–Ω–∏—é 95
    # –∏ –∫–∞—Å—Ç–æ–º–Ω—ã–µ —Ñ–æ—Ä–º–∞—Ç—ã –¥–ª—è –Ω–∏—Ö
    # format_above_degraded_threshold –∏ format_above_threshold
}

# –≤—ã–≤–æ–¥ –¥–∞—Ç—ã –∏ –≤—Ä–µ–º–µ–Ω–∏ –ø–æ –∑–∞–¥–∞–Ω–Ω–æ–º—É —Ñ–æ—Ä–º–∞—Ç—É
tztime local {
    format = "ÔÅ≥ %d %b ÔÄó %H:%M:%S"
}