general {
    colors = true # –≤–∫–ª—é—á–µ–Ω–∏–µ/–≤—ã–∫–ª—é—á–µ–Ω–∏–µ –ø–æ–¥–¥–µ—Ä–∂–∫–∏ —Ü–≤–µ—Ç–æ–≤ true/false
    interval = 1 # –∏–Ω—Ç–µ—Ä–≤–∞–ª –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è —Å—Ç—Ä–æ–∫–∏ —Å—Ç–∞—Ç—É—Å–∞, –≤ —Å–µ–∫—É–Ω–¥–∞—Ö
    output_format = "i3bar" # —Ñ–æ—Ä–º–∞—Ç –≤—ã–≤–æ–¥–∞, —É—Å—Ç–∞–Ω–∞–≤–ª–∏–≤–∞–µ–º i3bar (JSON)
}

# –ø–æ—Ä—è–¥–æ–∫ –≤—ã–≤–æ–¥–∞ –º–æ–¥—É–ª–µ–π
order += "run_watch openvpn"
order += "run_watch openconnect"
order += "volume master"
order += "wireless _first_"
order += "battery all"
order += "disk /"
order += "memory"
order += "cpu_usage"
order += "cpu_temperature 0"
